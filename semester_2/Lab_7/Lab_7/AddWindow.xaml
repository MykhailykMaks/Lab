<Window x:Class="Lab_7.AddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_7"
        mc:Ignorable="d"
        Title="AddWindow" Height="550" Width="460"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="#FAFAFA"/>
            <Setter Property="BorderBrush" Value="#D7D3C8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="1" 
                                CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="LabelHeader" TargetType="Label">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#5D4037"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="0,10,0,5"/>
        </Style>
    </Window.Resources>

    <Grid Background="#F4F2E9" Button.Click="OnAnyControlClick">

        <Border Background="White" Margin="20" CornerRadius="10" Padding="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.1"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Нова Анкета" FontWeight="Bold" 
                           Foreground="#5D4037" FontSize="24" 
                           HorizontalAlignment="Center" Margin="0,0,0,15"
                           FontFamily="Palatino Linotype"/>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="0,0,10,0">
                    <StackPanel>

                        <Label Content="Ім'я" Style="{StaticResource LabelHeader}"/>
                        <TextBox Text="{Binding name, UpdateSourceTrigger=PropertyChanged}" 
                                 PreviewTextInput="Name_PreviewTextInput" Name="nameBox" Height="30" ToolTip="ТІЛЬКИ БУКВИ"/>

                        <Label Content="Прізвище" Style="{StaticResource LabelHeader}"/>
                        <TextBox Text="{Binding surname, UpdateSourceTrigger=PropertyChanged}" 
                                 PreviewTextInput="Name_PreviewTextInput" Name="surnameBox" Height="30" ToolTip="ТІЛЬКИ БУКВИ"/>

                        <Label Content="Вік (від 16 до 100)" Style="{StaticResource LabelHeader}"/>
                        <TextBox Text="{Binding age, UpdateSourceTrigger=PropertyChanged}" 
                                 GotFocus="Age_GotFocus" LostFocus="Age_LostFocus" PreviewTextInput="Number_PreviewTextInput" Name="AgeBoxx" Height="30" Width="360" ToolTip="ТІЛЬКИ ЦИФРИ"/>

                        <Label Content="Стать" Style="{StaticResource LabelHeader}"/>
                        <StackPanel Orientation="Horizontal" Background="#F9F9F9" Margin="5">
                            <RadioButton x:Name="Male" GroupName="Sex" Content="Чоловік" IsChecked="{Binding isMale, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,15,0" FontSize="14"/>
                            <RadioButton x:Name="Female" GroupName="Sex" Content="Жінка" IsChecked="{Binding isFemale, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" FontSize="14"/>
                        </StackPanel>

                    </StackPanel>
                </ScrollViewer>

                <Button Grid.Row="2" Content="Зберегти" 
                        Command="{Binding SubmitCommand}" 
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        HorizontalAlignment="Stretch" Height="40" Margin="0,20,0,0"
                        Foreground="White" FontWeight="Bold" FontSize="16" Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Background" Value="#00796B"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#004D40"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>