<Window x:Class="Lab_7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_7"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="1100" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Window.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#EBE8DE"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Background="#F4F2E9">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#E8E6DC" BorderBrush="#D7D3C8" BorderThickness="0,0,1,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="15">
                    <TextBlock Text="МЕНЮ" FontWeight="Bold" Foreground="#5D4037" Margin="0,0,0,10" FontSize="12"/>

                    <Button Command="{Binding AddButtonCommand}" Style="{StaticResource MenuButtonStyle}" Background="#E0F2F1" Margin="0,0,0,5">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="➕" FontSize="16" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Додати заявку" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding ChangeButtonCommand}" CommandParameter="{Binding ElementName=StudentsList, Path=SelectedItems}" Style="{StaticResource MenuButtonStyle}" Margin="0,0,0,5">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="✏️" FontSize="16" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Змінити" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Command="{Binding DeleteButtonCommand}" CommandParameter="{Binding ElementName=StudentsList, Path=SelectedItems}" Style="{StaticResource MenuButtonStyle}" Foreground="#D32F2F" ToolTip="Для видалення декількох зажміть CTRL">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="🗑️" FontSize="16" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Видалити" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Separator Margin="0,15" Height="10" Background="#5D4037" Opacity="0.1"/>

                    <TextBlock Text="ІНФО" FontWeight="Bold" Foreground="#5D4037" Margin="0,0,0,10" FontSize="12"/>
                    <Label Content="АНКЕТИ" FontSize="14" Foreground="#5D4037"/>

                    <Label Name="NOELEM" Content="Список пуст" FontSize="12" Foreground="Gray" Visibility="Hidden" />
                </StackPanel>
            </ScrollViewer>
        </Border>

        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Background="#F4F2E9">
                <TextBlock Text="Список Студентів" VerticalAlignment="Center" Margin="20,0" FontSize="20" Foreground="#5D4037" FontWeight="Bold" FontFamily="Palatino Linotype"/>
            </Grid>

            <ListBox x:Name="StudentsList" Grid.Row="1"
                     ItemsSource="{Binding Students}"
                     SelectedItem="{Binding currentStudent, Mode=TwoWay}"
                     SelectionMode="Extended"
                     Background="#F4F2E9"
                     BorderThickness="0"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" ItemWidth="200" ItemHeight="150" Margin="10"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="5" CornerRadius="8" BorderThickness="1" Background="White">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="BorderBrush" Value="#A5D6A7"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect BlurRadius="10" ShadowDepth="3" Opacity="0.2"/>
                                                </Setter.Value>
                                            </Setter>
                                            <Setter Property="BorderBrush" Value="#00796B"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <Border.InputBindings>
                                <MouseBinding Gesture="LeftDoubleClick"
                                              Command="{Binding DataContext.CheckButtonCommand, RelativeSource={RelativeSource AncestorType=Window}}" 
                                              CommandParameter="{Binding ElementName=StudentsList, Path=SelectedItems}" />
                            </Border.InputBindings>

                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
                                <TextBlock Text="👤" FontSize="30" HorizontalAlignment="Center" Margin="0,0,0,10" Foreground="#5D4037"/>
                                <TextBlock Text="{Binding fullname}" FontWeight="Bold" TextAlignment="Center" TextWrapping="Wrap" FontSize="14" Foreground="#333333"/>
                                <TextBlock Text="{Binding AgeWithSuffix}" FontStyle="Italic" TextAlignment="Center" TextWrapping="Wrap" Foreground="Gray" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>

                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <ContentPresenter/>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                                <Setter Property="Effect">
                                    <Setter.Value>
                                        <DropShadowEffect BlurRadius="5" Color="Orange" Opacity="0.5"/>
                                    </Setter.Value>
                                </Setter>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>
        </Grid>
    </Grid>
</Window>