<Window x:Class="Lab_7.FullInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_7"
        mc:Ignorable="d"
        Title="FullInfo" Height="510" Width="400"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Window.Resources>
        <Style x:Key="LabelHeader" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#5D4037"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,15,0,2"/>
            <Setter Property="Opacity" Value="0.8"/>
        </Style>

        <Style x:Key="ValueText" TargetType="Label">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Padding" Value="0"/>
        </Style>
    </Window.Resources>

    <Grid Background="#F4F2E9">

        <Border Background="White" Margin="25" CornerRadius="10" Padding="25">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="2" Opacity="0.1"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,15">
                    <TextBlock Text="📋" FontSize="40" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                    <TextBlock Text="Full Information" FontWeight="Bold" 
                               Foreground="#5D4037" FontSize="22" 
                               HorizontalAlignment="Center" FontFamily="Palatino Linotype"/>
                </StackPanel>

                <Separator Grid.Row="0" VerticalAlignment="Bottom" Background="#D7D3C8" Margin="0,10"/>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,10">
                    <StackPanel>

                        <TextBlock Text="ІМ'Я" Style="{StaticResource LabelHeader}"/>
                        <Label Content="{Binding name}" Style="{StaticResource ValueText}" FontWeight="Bold"/>

                        <TextBlock Text="ФАМІЛІЯ" Style="{StaticResource LabelHeader}"/>
                        <Label Content="{Binding surname}" Style="{StaticResource ValueText}" FontWeight="Bold"/>

                        <Grid Margin="0,10,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0">
                                <TextBlock Text="ВІК" Style="{StaticResource LabelHeader}"/>
                                <Border Background="#E0F2F1" CornerRadius="5" Padding="10,5" HorizontalAlignment="Left">
                                    <Label Content="{Binding age}" FontSize="16" Foreground="#00695C" Padding="0"/>
                                </Border>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="СТАТЬ" Style="{StaticResource LabelHeader}"/>
                                <Label Content="{Binding sex}" Style="{StaticResource ValueText}"/>
                            </StackPanel>
                        </Grid>

                    </StackPanel>
                </ScrollViewer>

                <Button Grid.Row="2" Content="Закрити" 
                        IsCancel="True"
                        Height="40" Margin="0,20,0,0"
                        Foreground="Gray" Background="Transparent" BorderBrush="#D7D3C8" BorderThickness="1"
                        FontSize="14" Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                BorderBrush="{TemplateBinding BorderBrush}" 
                                                BorderThickness="{TemplateBinding BorderThickness}" 
                                                CornerRadius="5">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F5F5F5"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>
        </Border>
    </Grid>
</Window>