<Window x:Class="Lab_3.Task4"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_3"
        mc:Ignorable="d"
        Title="Завдання 4" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Label Content="Приховай усі кнопки"
               HorizontalAlignment="Center" FontSize="20" FontWeight="Bold"
               Foreground="Red" Margin="10"/>
        <StackPanel Grid.Row="1" 
                    HorizontalAlignment="Center" 
                    VerticalAlignment="Center">
            <StackPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Width" Value="200"/>
                    <Setter Property="Height" Value="50"/>
                    <Setter Property="Margin" Value="8"/>
                    <Setter Property="FontSize" Value="18"/>
                </Style>
            </StackPanel.Resources>
            <Button x:Name="Button1" Content="1" Background="CornflowerBlue" Click="ButtonClick"/>
            <Button x:Name="Button2" Content="2" Background="MediumSeaGreen" Click="ButtonClick"/>
            <Button x:Name="Button3" Content="3" Background="Crimson" Foreground="White" Click="ButtonClick"/>
            <Button x:Name="Button4" Content="4" Background="Orange" Click="ButtonClick"/>
            <Button x:Name="Button5" Content="5" Background="SlateBlue" Foreground="White" Click="ButtonClick"/>
        </StackPanel>
    </Grid>
</Window>
