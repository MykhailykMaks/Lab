<Window x:Class="Lab_6.FullInfo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_6"
        mc:Ignorable="d"
        Title="Full Information" Height="700" Width="450"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Window.Resources>
        <Style x:Key="LabelHeader" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#5D4037"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin" Value="0,10,0,2"/>
            <Setter Property="Opacity" Value="0.8"/>
        </Style>

        <Style x:Key="ValueText" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="TextWrapping" Value="Wrap"/>
        </Style>
    </Window.Resources>

    <Grid Background="#F4F2E9">

        <Border Background="White" Margin="25" CornerRadius="10" Padding="25">
            <Border.Effect>
                <DropShadowEffect BlurRadius="20" ShadowDepth="2" Opacity="0.1"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,15">
                    <TextBlock Text="📄" FontSize="40" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                    <TextBlock Text="Applicant Profile" FontWeight="Bold" 
                               Foreground="#5D4037" FontSize="22" 
                               HorizontalAlignment="Center" FontFamily="Palatino Linotype"/>
                </StackPanel>

                <Separator Grid.Row="0" VerticalAlignment="Bottom" Background="#D7D3C8" Margin="0,10"/>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,10">
                    <StackPanel>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="2*"/>
                                <ColumnDefinition Width="1*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <TextBlock Text="FULL NAME" Style="{StaticResource LabelHeader}"/>
                                <TextBlock Text="{Binding Pip}" FontWeight="Bold" FontSize="18" Foreground="#333333"/>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <TextBlock Text="BIRTH DATE" Style="{StaticResource LabelHeader}"/>
                                <TextBlock Text="{Binding Birthdate, StringFormat=dd.MM.yyyy}" Style="{StaticResource ValueText}"/>
                            </StackPanel>
                        </Grid>

                        <TextBlock Text="EDUCATION" Style="{StaticResource LabelHeader}"/>
                        <Border Background="#FAFAFA" CornerRadius="5" Padding="10" BorderBrush="#EEEEEE" BorderThickness="1">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="🎓 " FontSize="16"/>
                                <TextBlock Text="{Binding Education}" Style="{StaticResource ValueText}" FontWeight="Medium"/>
                            </StackPanel>
                        </Border>

                        <TextBlock Text="LANGUAGES" Style="{StaticResource LabelHeader}"/>
                        <ItemsControl ItemsSource="{Binding Languages}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#E0F2F1" CornerRadius="15" Padding="10,5" Margin="0,0,5,5">
                                        <TextBlock Text="{Binding}" Foreground="#00695C" FontWeight="SemiBold"/>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>

                        <Border Margin="0,15,0,0" BorderBrush="#D7D3C8" BorderThickness="0,1,0,0" Padding="0,10,0,0">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <StackPanel Grid.Row="0" Grid.Column="0" Margin="0,0,0,10">
                                    <TextBlock Text="EXPERIENCE" Style="{StaticResource LabelHeader}"/>
                                    <TextBlock Text="{Binding YearsOfExperience, StringFormat='{}{0} Years'}" Style="{StaticResource ValueText}"/>
                                </StackPanel>

                                <StackPanel Grid.Row="0" Grid.Column="1" Margin="0,0,0,10">
                                    <TextBlock Text="PC KNOWLEDGE" Style="{StaticResource LabelHeader}"/>
                                    <TextBlock Text="{Binding ComputerKnowledge}" Style="{StaticResource ValueText}"/>
                                </StackPanel>

                                <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
                                    <TextBlock Text="RECOMMENDATIONS" Style="{StaticResource LabelHeader}"/>
                                    <TextBlock Text="{Binding RecommendationsText}" Style="{StaticResource ValueText}" FontStyle="Italic"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                    </StackPanel>
                </ScrollViewer>

                <Button Grid.Row="2" Content="Close Info" 
                        IsCancel="True"
                        Height="40" Margin="0,10,0,0"
                        Foreground="Gray" Background="Transparent" BorderBrush="#D7D3C8" BorderThickness="1"
                        FontSize="14" Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" 
                                                BorderBrush="{TemplateBinding BorderBrush}" 
                                                BorderThickness="{TemplateBinding BorderThickness}" 
                                                CornerRadius="5">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#F5F5F5"/>
                                    <Setter Property="Foreground" Value="Black"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

            </Grid>
        </Border>
    </Grid>
</Window>