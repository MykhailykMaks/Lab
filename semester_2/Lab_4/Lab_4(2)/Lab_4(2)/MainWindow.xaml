<Window Background="GhostWhite"     x:Class="Lab_4_2_.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_4_2_"
        mc:Ignorable="d"
        Title="BestOil" Height="600" Width="500"
        Closing="BestOilClosing">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>
        <GroupBox Header="Заправка" FontStyle="Italic" FontSize="10" Foreground="DarkGreen"  BorderBrush="LightGreen" BorderThickness="2" Grid.Column="0" Grid.Row="0" Margin="3">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="2*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Тип бензину:" FontStyle="Normal" TextAlignment="Center" VerticalAlignment="Center" Grid.Column="0" Grid.Row="0" Height="15"></TextBlock>
                <ComboBox x:Name="typeofOil" SelectionChanged="TypeofOilChanged" FontStyle="Normal" Grid.Column="1" Grid.Row="0" Grid.ColumnSpan="2" Margin="5" Height="20" BorderBrush="Green">
                    <ComboBoxItem Content="А-76" />
                    <ComboBoxItem Content="А-92" />
                    <ComboBoxItem Content="А-95" />
                    <ComboBoxItem Content="Дизель" />
                    <ComboBoxItem Content="Газ" />
                </ComboBox>
                <TextBlock Text="Ціна за літр:" FontStyle="Normal" TextAlignment="Center" VerticalAlignment="Center" Grid.Column="0" Grid.Row="1" Height="15" FontSize="10"></TextBlock>
                <TextBlock x:Name="costForLiter" Text="" FontStyle="Normal" TextAlignment="Center" VerticalAlignment="Center" Grid.Column="1" Grid.Row="1" Grid.ColumnSpan="2" Margin="5" Height="15" FontSize="10"></TextBlock>
                <TextBlock Text="грн" FontStyle="Normal" TextAlignment="Center" VerticalAlignment="Center" Grid.Column="3" Grid.Row="1" Height="15"></TextBlock>
                <RadioButton x:Name="Count" Content="Кількість" IsChecked="True" GroupName="Calculate" Margin="5" Grid.Row="2" Grid.Column="0" Checked="CalculateType_Checked" VerticalAlignment="Center" Grid.ColumnSpan="2" FontSize="10" Foreground="DarkGreen"/>
                <RadioButton x:Name="Sum" Content="Сума" IsChecked="False" GroupName="Calculate" Margin="5" Grid.Row="3" Grid.Column="0" Checked="CalculateType_Checked" VerticalAlignment="Center" Grid.ColumnSpan="2" FontSize="10" Foreground="DarkGreen"/>
                <TextBox x:Name="CountTextBox" TextChanged="GasTextBox_TextChanged" Margin="5" Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2" Width="100" IsEnabled="True" FontStyle="Normal" VerticalAlignment="Center" Height="20"/>
                <TextBox x:Name="SumTextBox" TextChanged="GasTextBox_TextChanged" Margin="5" Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2" Width="100" IsEnabled="False"  FontStyle="Normal" VerticalAlignment="Center" Height="20"/>
                <TextBlock Text="літрів" FontStyle="Normal" TextAlignment="Center" VerticalAlignment="Center" Grid.Column="3" Grid.Row="2" Height="15"></TextBlock>
                <TextBlock Text="грн" FontStyle="Normal" TextAlignment="Center" VerticalAlignment="Center" Grid.Column="3" Grid.Row="3" Height="15"></TextBlock>
                <GroupBox x:Name="GasTotalGroupBox" Header="До oплати:" FontStyle="Italic" FontSize="10" Foreground="DarkGreen"  BorderBrush="LightGreen" BorderThickness="1" Grid.Column="0" Grid.Row="4" Grid.ColumnSpan="4" Margin="3">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width ="5*"/>
                            <ColumnDefinition Width ="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="TotalCostForOil" FontStyle="Normal" TextAlignment="Right"  VerticalAlignment="Center" Grid.Column="0" Height="50" FontSize="30"></TextBlock>
                        <TextBlock x:Name="GasTotalUnitTextBlock" Text="грн" FontStyle="Normal" TextAlignment="Center"   VerticalAlignment="Bottom"  Grid.Column="1" Height="30"></TextBlock>
                    </Grid>
                </GroupBox>
            </Grid>
        </GroupBox>
        <GroupBox Header="Кафе" FontStyle="Italic" FontSize="10" Foreground="DarkGreen"  BorderBrush="LightGreen" BorderThickness="2" Grid.Column="1" Grid.Row="0" Margin="3">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="3*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Text="Вибирайте що будете:" FontStyle="Normal" TextAlignment="Center" VerticalAlignment="Center" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2" Height="15"></TextBlock>
                <TextBlock Text="Кількість" FontStyle="Normal" TextAlignment="Center" VerticalAlignment="Center" Grid.Column="2" Grid.Row="0" Height="15"></TextBlock>
                <TextBlock Text="Ціна" FontStyle="Normal" TextAlignment="Center" VerticalAlignment="Center" Grid.Column="3" Grid.Row="0" Height="15"></TextBlock>
                <CheckBox x:Name="hotdogCheckBox" Checked="CafeCheckBox_Toggled" Unchecked="CafeCheckBox_Toggled" Content="Хот-дог" Margin="5" Grid.Row="1" Grid.ColumnSpan="2" VerticalAlignment="Center" FontSize="12" Foreground="DarkGreen"/>
                <CheckBox x:Name="hamburgerCheckBox" Checked="CafeCheckBox_Toggled" Unchecked="CafeCheckBox_Toggled" Content="Гамбургер" Margin="5" Grid.Row="2" Grid.ColumnSpan="2" VerticalAlignment="Center" FontSize="12" Foreground="DarkGreen"/>
                <CheckBox x:Name="friesCheckBox" Checked="CafeCheckBox_Toggled" Unchecked="CafeCheckBox_Toggled" Content="Картопля Фрі" Margin="5" Grid.Row="3" Grid.ColumnSpan="2" VerticalAlignment="Center" FontSize="12" Foreground="DarkGreen"/>
                <CheckBox x:Name="cokeCheckBox" Checked="CafeCheckBox_Toggled" Unchecked="CafeCheckBox_Toggled" Content="Кока-кола" Margin="5" Grid.Row="4" Grid.ColumnSpan="2" VerticalAlignment="Center" FontSize="12" Foreground="DarkGreen"/>
                <CheckBox x:Name="coffeeCheckBox" Checked="CafeCheckBox_Toggled" Unchecked="CafeCheckBox_Toggled" Content="Кава" Margin="5" Grid.Row="5" Grid.ColumnSpan="2" VerticalAlignment="Center" FontSize="12" Foreground="DarkGreen"/>
                <TextBox x:Name="CountOfhotdogsBox" IsEnabled="False" TextChanged="CafeTextBox_TextChanged" Margin="5" Grid.Row="1" Grid.Column="2" Width="45" FontStyle="Normal" VerticalAlignment="Center" Height="20"/>
                <TextBox x:Name="CountOfhamburgersBox" IsEnabled="False" TextChanged="CafeTextBox_TextChanged" Margin="5" Grid.Row="2" Grid.Column="2" Width="45" FontStyle="Normal" VerticalAlignment="Center" Height="20"/>
                <TextBox x:Name="CountOffriesBox" IsEnabled="False" TextChanged="CafeTextBox_TextChanged" Margin="5" Grid.Row="3" Grid.Column="2" Width="45" FontStyle="Normal" VerticalAlignment="Center" Height="20"/>
                <TextBox x:Name="CountOfcokesBox" IsEnabled="False" TextChanged="CafeTextBox_TextChanged" Margin="5" Grid.Row="4" Grid.Column="2" Width="45" FontStyle="Normal" VerticalAlignment="Center" Height="20"/>
                <TextBox x:Name="CountOfcoffeesBox" IsEnabled="False" TextChanged="CafeTextBox_TextChanged" Margin="5" Grid.Row="5" Grid.Column="2" Width="45" FontStyle="Normal" VerticalAlignment="Center" Height="20"/>
                <TextBlock x:Name="costForHotdog" Text="" FontStyle="Normal" TextAlignment="Center" VerticalAlignment="Center" Grid.Column="3" Grid.Row="1" Margin="5" Height="20"></TextBlock>
                <TextBlock x:Name="costForHamburger" Text="" FontStyle="Normal" TextAlignment="Center" VerticalAlignment="Center" Grid.Column="3" Grid.Row="2" Margin="5" Height="20"></TextBlock>
                <TextBlock x:Name="costForFries" Text="" FontStyle="Normal" TextAlignment="Center" VerticalAlignment="Center" Grid.Column="3" Grid.Row="3" Margin="5" Height="20"></TextBlock>
                <TextBlock x:Name="costForCoke" Text="" FontStyle="Normal" TextAlignment="Center" VerticalAlignment="Center" Grid.Column="3" Grid.Row="4" Margin="5" Height="20"></TextBlock>
                <TextBlock x:Name="costForCoffee" Text="" FontStyle="Normal" TextAlignment="Center" VerticalAlignment="Center" Grid.Column="3" Grid.Row="5" Margin="5" Height="20"></TextBlock>
                <GroupBox Header="До oплати:" FontStyle="Italic" FontSize="10" Foreground="DarkGreen"  BorderBrush="LightGreen" BorderThickness="1" Grid.Column="0" Grid.Row="6" Grid.ColumnSpan="4" Margin="3">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width ="5*"/>
                            <ColumnDefinition Width ="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock x:Name="TotalCostInCafe" FontStyle="Normal" TextAlignment="Right"  VerticalAlignment="Center" Grid.Column="0" Height="50" FontSize="30"></TextBlock>
                        <TextBlock Text="грн" FontStyle="Normal" TextAlignment="Center"   VerticalAlignment="Bottom"  Grid.Column="1" Height="30"></TextBlock>
                    </Grid>
                </GroupBox>
            </Grid>
        </GroupBox>
        <GroupBox Header="Оплата" FontStyle="Italic" FontSize="10" Foreground="DarkGreen"  BorderBrush="LightGreen" BorderThickness="2" Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Margin="3">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="+" FontStyle="Normal" TextAlignment="Center" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.RowSpan="2" FontSize="30" Foreground="Black" Height="50"></TextBlock>
                <TextBlock x:Name="GasPaymentText" FontStyle="Normal" TextAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Bottom" Grid.Row="0" Grid.Column="1" FontSize="20" Foreground="Black" Height="50" Margin="10"></TextBlock>
                <TextBlock x:Name="CafePaymentText" FontStyle="Normal" TextAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Row="1" Grid.Column="1" FontSize="20" Foreground="Black" Height="50" Margin="10"></TextBlock>
                <TextBlock x:Name="TotalSum" Text="" Margin="10" FontStyle="Normal" TextAlignment="Center" VerticalAlignment="Center" Grid.Column="2" Grid.Row="0" Grid.RowSpan="2" FontSize="30" Foreground="Black" Height="100"></TextBlock>
                <Button x:Name="CalculateSum" Content="Порахувати" Margin="5" FontStyle="Normal" VerticalAlignment="Center" Grid.Column="3" Grid.Row="1" FontSize="16" Foreground="Black" Height="60" Width="100" Click="CalculateSum_Click"></Button>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
