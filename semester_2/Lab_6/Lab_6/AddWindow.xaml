<Window x:Class="Lab_6.AddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_6"
        mc:Ignorable="d"
        Title="Add Application" Height="650" Width="500"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Padding" Value="5"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="#FAFAFA"/>
            <Setter Property="BorderBrush" Value="#D7D3C8"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="1" 
                                CornerRadius="5">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="RadioButton">
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="0,2"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="LabelHeader" TargetType="Label">
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#5D4037"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="0,10,0,5"/>
        </Style>
    </Window.Resources>

    <Grid Background="#F4F2E9" Button.Click="OnAnyControlClick">

        <Border Background="White" Margin="20" CornerRadius="10" Padding="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="15" ShadowDepth="2" Opacity="0.1"/>
            </Border.Effect>

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="New Application" FontWeight="Bold" 
                           Foreground="#5D4037" FontSize="24" 
                           HorizontalAlignment="Center" Margin="0,0,0,15"
                           FontFamily="Palatino Linotype"/>

                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="0,0,10,0">
                    <StackPanel>

                        <Label Content="PIP (Full Name)" Style="{StaticResource LabelHeader}"/>
                        <TextBox Text="{Binding Pip, UpdateSourceTrigger=PropertyChanged}" 
                                 PreviewTextInput="Name_PreviewTextInput" Name="UsernameBox" Height="30"/>

                        <Label Content="Birth Date" Style="{StaticResource LabelHeader}"/>
                        <DatePicker SelectedDate="{Binding Birthdate}" Focusable="False" Height="30" VerticalContentAlignment="Center"/>

                        <Label Content="Education" Style="{StaticResource LabelHeader}"/>
                        <StackPanel Orientation="Horizontal" Background="#F9F9F9">
                            <RadioButton x:Name="RbSchool" GroupName="Edu" Content="Середнє" Margin="0,0,10,0"/>
                            <RadioButton x:Name="RbBachelor" GroupName="Edu" Content="Бакалавр" Margin="0,0,10,0"/>
                            <RadioButton x:Name="RbHigh" GroupName="Edu" Content="Магістр"/>
                        </StackPanel>

                        <Label Content="Languages" Style="{StaticResource LabelHeader}"/>
                        <WrapPanel x:Name="LanguagesPanel">
                            <CheckBox Tag="English" Content="English" Width="100"/>
                            <CheckBox Tag="German" Content="German" Width="100"/>
                            <CheckBox Tag="French" Content="French" Width="100"/>
                            <CheckBox Tag="Chinese" Content="Chinese" Width="100"/>
                        </WrapPanel>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Grid.Column="0" Margin="0,0,10,0">
                                <Label Content="Computer Skills?" Style="{StaticResource LabelHeader}"/>
                                <StackPanel>
                                    <RadioButton x:Name="Yes" GroupName="Comp" Content="Yes"/>
                                    <RadioButton x:Name="No" GroupName="Comp" Content="No"/>
                                </StackPanel>
                            </StackPanel>

                            <StackPanel Grid.Column="1">
                                <Label Content="Recommendations?" Style="{StaticResource LabelHeader}"/>
                                <StackPanel>
                                    <RadioButton x:Name="Have" GroupName="Rec" Content="Yes"/>
                                    <RadioButton x:Name="DontHave" GroupName="Rec" Content="No"/>
                                </StackPanel>
                            </StackPanel>
                        </Grid>

                        <Label Content="Years of Experience" Style="{StaticResource LabelHeader}"/>
                        <TextBox Text="{Binding YearsOfExperience, UpdateSourceTrigger=PropertyChanged}" 
                                 PreviewTextInput="Number_PreviewTextInput" Name="UsernameBoxx" Height="30" Width="100" HorizontalAlignment="Left" Margin="3,0,0,0"/>

                    </StackPanel>
                </ScrollViewer>

                <Button Grid.Row="2" Content="Submit Application" 
                        Command="{Binding SubmitCommand}" 
                        CommandParameter="{Binding RelativeSource={RelativeSource AncestorType=Window}}"
                        HorizontalAlignment="Stretch" Height="40" Margin="0,20,0,0"
                        Foreground="White" FontWeight="Bold" FontSize="16" Cursor="Hand">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Setter Property="Background" Value="#00796B"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#004D40"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

            </Grid>
        </Border>
    </Grid>
</Window>