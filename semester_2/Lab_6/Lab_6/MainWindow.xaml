<Window x:Class="Lab_6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_6"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="1100" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Window.Resources>
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="10,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#EBE8DE"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="FilterRadioButtonStyle" TargetType="RadioButton">
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
        </Style>
    </Window.Resources>

    <Grid Background="#F4F2E9">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="230" x:Name="SideMenuColumn"/>
            <ColumnDefinition Width="13*"/>
            <ColumnDefinition Width="74*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="#E8E6DC" BorderBrush="#D7D3C8" BorderThickness="0,0,1,0">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="15">

                    <TextBlock Text="МЕНЮ" FontWeight="Bold" Foreground="#5D4037" Margin="0,0,0,10" FontSize="12"/>

                    <Button Style="{StaticResource MenuButtonStyle}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="📚" FontSize="18" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Мої книги" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource MenuButtonStyle}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="⭐" FontSize="32" Margin="-2,0,10,0" VerticalAlignment="Center" Foreground="#FBC02D" Height="45" Width="30"/>
                            <TextBlock Text="Улюблені" FontSize="14" VerticalAlignment="Center" Margin="-5,0,0,0"/>
                        </StackPanel>
                    </Button>

                    <Button Style="{StaticResource MenuButtonStyle}">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="🕒" FontSize="18" Margin="0,0,10,0" VerticalAlignment="Center"/>
                            <TextBlock Text="Історія" FontSize="14" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Separator Margin="0,15" Height="10" Background="#5D4037"/>

                    <TextBlock Text="КАТЕГОРІЇ" FontWeight="Bold" Foreground="#5D4037" Margin="0,0,0,10" FontSize="12"/>
                    <StackPanel Margin="5,0,0,0">
                        <RadioButton Content="Всі" IsChecked="True" GroupName="Filters" 
                         Command="{Binding FilterCommand}" CommandParameter="All"
                         Style="{StaticResource FilterRadioButtonStyle}"/>

                        <RadioButton Content="Бакалавр" GroupName="Filters" 
                         Command="{Binding FilterCommand}" CommandParameter="Бакалавр"
                         Style="{StaticResource FilterRadioButtonStyle}"/>

                        <RadioButton Content="Середнє" GroupName="Filters" 
                         Command="{Binding FilterCommand}" CommandParameter="Середнє"
                         Style="{StaticResource FilterRadioButtonStyle}"/>

                        <RadioButton Content="Магістр" GroupName="Filters" 
                         Command="{Binding FilterCommand}" CommandParameter="Магістр"
                         Style="{StaticResource FilterRadioButtonStyle}"/>
                    </StackPanel>

                    <Separator Margin="0,15" Height="10" Background="#5D4037"/>

                    <TextBlock Text="ДІЇ" FontWeight="Bold" Foreground="#5D4037" Margin="0,0,0,10" FontSize="12"/>

                    <Button Content="➕ Додати заявку" 
                            Command="{Binding AddButtonCommand}" 
                            Style="{StaticResource MenuButtonStyle}" Background="#E0F2F1"/>
                    <Button Content="✏️ Змінити" 
                            Command="{Binding ChangeButtonCommand}" 
                            Style="{StaticResource MenuButtonStyle}"/>

                    <Button Content="🗑️ Видалити" 
                            Command="{Binding DeleteButtonCommand}" 
                            Style="{StaticResource MenuButtonStyle}" Foreground="#D32F2F"/>

                </StackPanel>
            </ScrollViewer>
        </Border>

        <Grid Grid.Column="1" Grid.ColumnSpan="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Background="#F4F2E9">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Button Grid.Column="0" Content="☰" Click="SideMenu_Click" Width="40" Height="40" Margin="15,0" 
                        Background="Transparent" BorderThickness="0" FontSize="20" Cursor="Hand" Foreground="#5D4037"/>

                <TextBox x:Name="SearchTextBox" Grid.Column="1" Margin="0,15" VerticalContentAlignment="Center" 
                         Padding="10,0" Text="Пошук..." GotFocus ="SearchTextBox_GotFocus" LostFocus="SearchTextBox_LostFocus" 
                         Foreground="Gray" FontSize="14" BorderThickness="1" BorderBrush="#D7D3C8" Background="White">
                    <TextBox.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="20"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>

                <ComboBox Grid.Column="2" Width="120" Margin="15" Height="35" FontSize="14" VerticalContentAlignment="Center" Background="White">
                    <ComboBoxItem Content="За назвою"/>
                    <ComboBoxItem Content="За датою"/>
                    <ComboBox.Text>Сортування ▼</ComboBox.Text>
                </ComboBox>
            </Grid>

            <ListBox Grid.Row="1" 
                     ItemsSource="{Binding Applications}" 
                     SelectedItem="{Binding currentapplication, Mode=TwoWay}"
                     Background="#F4F2E9"
                     BorderThickness="0"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled">

                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" ItemWidth="160" ItemHeight="220" Margin="10"/>
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="5" CornerRadius="8" BorderThickness="1" Background="White">
                            <Border.Style>
                                <Style TargetType="Border">
                                    <Setter Property="BorderBrush" Value="#A5D6A7"/>
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Effect">
                                                <Setter.Value>
                                                    <DropShadowEffect BlurRadius="10" ShadowDepth="3" Opacity="0.2"/>
                                                </Setter.Value>
                                            </Setter>
                                            <Setter Property="BorderBrush" Value="#00796B"/>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>

                            <Border.InputBindings>
                                <MouseBinding Gesture="LeftDoubleClick" 
                                              Command="{Binding DataContext.CheckButtonCommand, RelativeSource={RelativeSource AncestorType=Window}}" />
                            </Border.InputBindings>

                            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
                                <TextBlock Text="📄" FontSize="40" HorizontalAlignment="Center" Margin="0,0,0,10" Foreground="#5D4037"/>
                                <TextBlock Text="{Binding Pip}" FontWeight="Bold" TextAlignment="Center" TextWrapping="Wrap" FontSize="14" Foreground="#333333"/>
                                <TextBlock Text="{Binding Education}" FontStyle="Italic" TextAlignment="Center" TextWrapping="Wrap" Foreground="Gray" Margin="0,5,0,0"/>
                            </StackPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>

                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ListBoxItem">
                                    <ContentPresenter/>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Opacity" Value="0.8"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>
        </Grid>
    </Grid>
</Window>