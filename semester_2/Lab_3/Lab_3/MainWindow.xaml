<Window x:Class="Lab_3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_3"
        mc:Ignorable="d"
        Title="Головне меню" Height="350" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Content="Оберіть завдання"
               Grid.Row="0"
               HorizontalAlignment="Center"
               FontSize="20" FontWeight="Bold"
               Margin="10"/>
        <WrapPanel Grid.Row="1"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center">
            <WrapPanel.Resources>
                <Style TargetType="Button">
                    <Setter Property="Width" Value="120"/>
                    <Setter Property="Height" Value="60"/>
                    <Setter Property="Margin" Value="10"/>
                    <Setter Property="FontSize" Value="14"/>
                </Style>
            </WrapPanel.Resources>
            <Button Content="Завдання 1" Click="Task1Click"/>
            <Button Content="Завдання 2" Click="Task2Click"/>
            <Button Content="Завдання 3" Click="Task3Click"/>
            <Button Content="Завдання 4" Click="Task4Click"/>
            <Button Content="Завдання 5" Click="Task5Click"/>
            <Button Content="Завдання 6" Click="Task6Click"/>
        </WrapPanel>
    </Grid>
</Window>